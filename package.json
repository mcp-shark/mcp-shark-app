{
  "name": "mcp-shark-app",
  "version": "1.0.0",
  "description": "MCP Shark - Electron app for aggregating multiple MCP servers",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "postinstall": "electron-builder install-app-deps && npm run install:mcp-shark && npm run rebuild:native && npm run build:mcp-shark-ui",
    "install:mcp-shark": "cd node_modules/mcp-shark && npm run install:all || true",
    "rebuild:native": "bash rebuild-native.sh || echo 'Rebuild skipped'",
    "build:mcp-shark-ui": "cd node_modules/mcp-shark/ui && npm run build || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "electron",
    "aggregator"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "mcp-shark": "github:mcp-shark/mcp-shark"
  },
  "build": {
    "appId": "com.mcpshark.app",
    "productName": "MCP Shark",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "**/node_modules/@swc/core*/**/*",
      "**/node_modules/*/build/**/*",
      "**/node_modules/*/*.node",
      "**/node_modules/mcp-shark/**/*",
      "node_modules/mcp-shark/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/mcp-shark",
        "to": "app/node_modules/mcp-shark",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}

